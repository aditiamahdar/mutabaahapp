<!DOCTYPE html>
<html>
  <head>
    <title>Mutabaah</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if flash[:notice] %>
      <div class='alert-notice'>
        <%= flash[:notice] %>
      </div>
    <% end %>
    <% if flash[:error] %>
      <div class='alert-error'>
        <%= flash[:error] %>
      </div>
    <% end %>
    <%= yield %>
  </body>
</html>
